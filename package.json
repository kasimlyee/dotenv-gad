{
  "name": "dotenv-gad",
  "version": "1.4.0",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "bin": {
    "dotenv-gad": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "bench": "node benchmarks/validate-bench.js",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "husky"
  },
  "keywords": [
    "dotenv",
    "environment",
    "validation",
    "typescript",
    "schema",
    "configuration",
    "env",
    "config",
    "type-safe",
    "nodejs",
    "cli"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/types/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.js"
    },
    "./client": {
      "types": "./dist/types/client.d.ts",
      "import": "./dist/client.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "author": "Kasim Lyee",
  "license": "MIT",
  "description": "Environment variable validation and type safety for Node.js and modern JavaScript applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/kasimlyee/dotenv-gad.git"
  },
  "bugs": {
    "url": "https://github.com/kasimlyee/dotenv-gad/issues"
  },
  "homepage": "https://kasimlyee.github.io/dotenv-gad/",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^24.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.19.1",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "esbuild": "^0.27.2"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "figlet": "^1.10.0",
    "inquirer": "^13.2.1",
    "ora": "^9.1.0"
  }
}
